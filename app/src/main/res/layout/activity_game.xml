<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:orientation="vertical"
    android:padding="15dp"
    android:weightSum="10"
    android:background="@color/backgroundGame"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:weightSum="10"
        android:layout_marginTop="25dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2048"
            android:textSize="44sp"
            android:layout_centerInParent="true"
            android:layout_weight="2"
            android:textColor="@color/colorAccent"
            />

        <Button
            android:id="@+id/game_activity_score"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gridColor"
            android:text="SCORE\n0"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/game_activity_best"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="BEST\n0"
            android:textSize="15dp"
            android:textColor="@android:color/white"
            android:background="@color/gridColor"
            android:layout_margin="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Join the numbers and get 2048."
            android:textSize="22dp"
            android:textStyle="bold"
            android:padding="15dp"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="2048"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/game_activity_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restart"
            android:textSize="33dp"
            android:background="@color/backgroundGame"
            android:textColor="@android:color/holo_red_light"
            android:textAlignment="textStart"
            android:layout_weight="1"
            />
    </LinearLayout>

    <GridLayout
        android:id="@+id/activity_game_GridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:columnCount="4"
        android:rowCount="4"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="true"
        android:padding="14dp"
        android:layout_margin="2dp"
        android:background="@color/gridColor">

        <!-- ROW 1-->
        <Button
            android:id="@+id/game_0_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@color/btnColor"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:text="2"/>
        <Button
            android:id="@+id/game_0_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/btnColor"/>
        <Button
            android:id="@+id/game_0_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/btnColor"/>
        <Button
            android:id="@+id/game_0_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/btnColor"/>


        <!-- ROW 2-->
        <Button
            android:id="@+id/game_1_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/btnColor"/>
        <Button
            android:id="@+id/game_1_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/btnColor"/>
        <Button
            android:id="@+id/game_1_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/btnColor"/>
        <Button
            android:id="@+id/game_1_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/btnColor"/>


        <!-- ROW 3-->
        <Button
            android:id="@+id/game_2_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/btnColor"/>
        <Button
            android:id="@+id/game_2_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/btnColor"/>
        <Button
            android:id="@+id/game_2_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/btnColor"/>
        <Button
            android:id="@+id/game_2_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/btnColor"/>


        <!-- ROW 2-->
        <Button
            android:id="@+id/game_3_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/btnColor"/>
        <Button
            android:id="@+id/game_3_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/btnColor"/>
        <Button
            android:id="@+id/game_3_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/btnColor"/>
        <Button
            android:id="@+id/game_3_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:textSize="30dp"
            android:background="@color/btnColor"/>

    </GridLayout>

</LinearLayout>